<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingLeft="12dip"
    android:paddingRight="12dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginBottom="12dip"
        android:layout_marginTop="25dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <EditText
            android:id="@+id/et_cardName"
            style="@style/ff"
            android:background="@null"
            android:editable="false"
            android:gravity="center_vertical"
            android:hint="请选择银行卡名称"
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="12dip"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <EditText
            android:id="@+id/et_card"
            style="@style/ff"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入银行卡卡号"
            android:inputType="number"
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:background="@drawable/login_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip" >

        <EditText
            android:id="@+id/et_name"
            style="@style/ff"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:textColor="@color/text_black"
            android:textColorHint="#bfbfbf"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_font_15" />
    </LinearLayout>

    <TextView
        style="@style/fw"
        android:paddingTop="5dip"
        android:text="(请输入正确的银行卡及卡号信息)"
        android:textColor="@color/txt_teacher_name"
        android:textSize="@dimen/text_font_12" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_15" />

</LinearLayout>