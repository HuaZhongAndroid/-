<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="10dip"
    android:paddingLeft="6dip"
    android:paddingRight="15dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.bm.util.CycleImageView
            android:id="@+id/img_head"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="center" />

        <LinearLayout
            style="@style/fwv"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:paddingTop="8dip" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/ww"
                android:layout_gravity="center_vertical"
                android:text="王小明"
                android:textColor="@color/txt_teacher_name"
                android:textSize="@dimen/text_font_16" />

            <TextView
                android:id="@+id/tv_age"
                style="@style/ww"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dip"
                android:text="年龄：4岁"
                android:textColor="@color/txt_teacher_name"
                android:textSize="@dimen/text_font_16" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/btn_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/phone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_comm"
        style="@style/ww"
        android:layout_width="85dip"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/kc_pj"
        android:gravity="center"
        android:text="评分"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_16" />

    <TextView
        android:id="@+id/tv_tg"
        style="@style/ww"
        android:layout_width="85dip"
        android:layout_height="35dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/btn_com"
        android:gravity="center"
        android:text="通过"
        android:textColor="@color/app_dominantHue"
        android:textSize="@dimen/text_font_16"
        android:visibility="gone" />

</LinearLayout>