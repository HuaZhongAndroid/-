<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dip"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="12dip" >

    <FrameLayout
        android:id="@+id/fl_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <net.grobas.view.PolygonImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_head"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_gravity="center"
            app:poly_border="true"
            app:poly_border_width="2dp"
            app:poly_corner_radius="15"
            app:poly_rotation_angle="90"
            app:poly_vertices="6" />

        <ImageView
            android:id="@+id/img_status"
            style="@style/ww"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="5dip"
            android:src="@drawable/btn_pay_selector" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        style="@style/ww"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:singleLine="true"
        android:text="头像"
        android:textColor="@color/txt_teacher_name"
        android:textSize="@dimen/text_font_14" />

</LinearLayout>