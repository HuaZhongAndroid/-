<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/fwh"
            android:background="@color/white"
            android:padding="8dip" >

            <com.lib.widget.RoundImageViewFive
                android:id="@+id/img_pic"
                android:layout_width="85dip"
                android:layout_height="85dip"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dip"
                    android:layout_marginTop="6dip"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="[晋级课程] 滚筒+鸟巢+西藏之课程"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_course_money"
                    style="@style/ww"
                    android:text="￥99"
                    android:textColor="@color/app_dominantHue"
                    android:textSize="@dimen/text_font_18" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"
            android:background="@color/line_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:paddingTop="16dip"
            android:text="支付方式"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_font_15" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dip"
            android:background="@color/line_color" />

        <LinearLayout
            style="@style/fwv"
            android:background="@color/white"
            android:paddingLeft="15dip" >

            <LinearLayout
                android:id="@+id/ll_alipay"
                style="@style/fwh"
                android:gravity="center_vertical"
                android:paddingBottom="13dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/zhifubao"
                    android:drawablePadding="12dip"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    android:id="@+id/img_alipay"
                    style="@style/ww"
                    android:padding="10dip"
                    android:src="@drawable/btn_pay_selector" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_wexin"
                style="@style/fwh"
                android:gravity="center_vertical"
                android:paddingBottom="13dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/weixin"
                    android:drawablePadding="12dip"
                    android:gravity="center_vertical"
                    android:text="微信"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    android:id="@+id/img_wexin"
                    style="@style/ww"
                    android:padding="10dip"
                    android:src="@drawable/btn_pay_selector" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_unio"
                style="@style/fwh"
                android:gravity="center_vertical"
                android:paddingBottom="13dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/yinlian"
                    android:drawablePadding="12dip"
                    android:gravity="center_vertical"
                    android:text="网银"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    android:id="@+id/img_unio"
                    style="@style/ww"
                    android:padding="10dip"
                    android:src="@drawable/btn_pay_selector" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/ll_balance "
                style="@style/fwh"
                android:gravity="center_vertical"
                android:paddingBottom="13dip"
                android:paddingTop="13dip" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/zhanghuyue"
                    android:drawablePadding="12dip"
                    android:gravity="center_vertical"
                    android:text="账户余额"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="余额  ￥500.00"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    android:id="@+id/img_balance"
                    style="@style/ww"
                    android:padding="10dip"
                    android:src="@drawable/btn_pay_selector" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/line_color" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginBottom="3dip"
        android:id="@+id/tv_next"
        android:layout_width="fill_parent"
        android:layout_height="47dip"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_16" />

</LinearLayout>