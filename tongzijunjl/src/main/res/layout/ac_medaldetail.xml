<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/fwv"
        android:background="@color/account_bg_Color"
        android:paddingLeft="12dip"
        android:paddingTop="15dip" >

        <LinearLayout
            style="@style/fwh"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_sixview_head"
                android:layout_width="100dip"
                android:layout_height="108dip"
                android:background="@drawable/medal"
                android:padding="0dip" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/ww"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:text="野外定位勋章"
                android:textColor="@color/txt_name"
                android:textSize="@dimen/text_font_16" />
        </LinearLayout>

        <TextView
            style="@style/ww"
            android:paddingTop="12dip"
            android:text="报名参加以下课程即可获得此勋章哦"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_font_14" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_course"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dip"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/line_color"
        android:dividerHeight="1dip"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false" />

</LinearLayout>