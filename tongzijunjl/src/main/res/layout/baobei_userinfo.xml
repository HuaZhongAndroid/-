<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff4f4f4">
  
    <LinearLayout
        style="@style/fwh"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="14dip"
        android:background="#fff4f4f4"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dip" >

            <ImageView
                style="@style/ww"
                android:src="@drawable/icon_gray_search" />

            <EditText
                android:id="@+id/et_seachName"
                style="@style/ff"
                android:background="@drawable/group_search"
                android:hint="请输入姓名关键字"
                android:paddingLeft="8dip"
                android:textColor="@color/text_black"
                android:textColorHint="@color/txt_color_a"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_search"
            style="@style/ww"
            android:layout_width="85dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:background="@drawable/kc_pj"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_16" />
    </LinearLayout>
    <ListView 
        android:id="@+id/lv_baobei_userinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:scrollbars="none"
        android:dividerHeight="1dp"
        android:divider="#ffe6e6e6"
        
        />
    
</LinearLayout>
