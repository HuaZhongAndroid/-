<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_bgcolor"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout style="@style/fwv" >

            <LinearLayout
                style="@style/fw"
                android:background="@drawable/mine_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <net.grobas.view.PolygonImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_sixview_head"
                    android:layout_width="110dip"
                    android:layout_height="110dip"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    app:poly_border="true"
                    app:poly_border_width="5dp"
                    app:poly_corner_radius="25"
                    app:poly_rotation_angle="90"
                    app:poly_vertices="6" />
            </LinearLayout>
            <!-- 昵称 -->

            <LinearLayout
                style="@style/fw"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="教练姓名"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_userName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入教练姓名"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 性别 -->

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    style="@style/ww"
                    android:layout_gravity="center"
                    android:paddingRight="5dip"
                    android:src="@drawable/icon_right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 出生日期 -->

            <LinearLayout
                android:id="@+id/ll_birthday"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="出生日期"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dip"
                    android:layout_marginTop="2dip"
                    android:layout_weight="2"
                    android:hint="请选择"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    style="@style/ww"
                    android:layout_gravity="center"
                    android:paddingRight="5dip"
                    android:src="@drawable/icon_right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />
            <!-- 身份证号码 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号码"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_idCard"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入身份证号码"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 联系电话 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_telPhone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 所在城市 -->

            <LinearLayout
                android:id="@+id/ll_city"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="所在城市"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:hint="请选择"
                    android:textColor="@color/personal_textNameColor"
                    android:textColorHint="#bfbfbf"
                    android:textSize="@dimen/text_font_15" />

                <ImageView
                    style="@style/ww"
                    android:layout_gravity="center"
                    android:paddingRight="5dip"
                    android:src="@drawable/icon_right" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 联系地址 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系地址"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入联系地址"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 学历 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="学历"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_education"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入学历"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 毕业学校 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ww"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="1dip"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="毕业学校"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <EditText
                    android:id="@+id/et_graduateSchool"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输毕业学校"
                    android:singleLine="true"
                    android:textColor="@color/personal_textAddressColor"
                    android:textColorHint="#bfbfbf"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.001dip"
                android:background="@color/psersonal_line" />

            <!-- 资质证书 -->

            <LinearLayout
                style="@style/fw"
                android:layout_margin="15dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="资质证书"
                    android:textColor="@color/personal_textNameColor"
                    android:textSize="@dimen/text_font_15" />

                <com.lib.widget.FuGridView
                    android:id="@+id/fgv_zlImage"
                    style="@style/fw"
                    android:layout_marginLeft="5dip"
                    android:cacheColorHint="@color/transparent"
                    android:columnWidth="70dip"
                    android:fadingEdge="none"
                    android:gravity="center"
                    android:horizontalSpacing="8dip"
                    android:listSelector="#00000000"
                    android:numColumns="auto_fit"
                    android:paddingRight="2dip"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="-6dip" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.001dip"
                    android:background="@color/psersonal_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_save"
        style="@style/fw"
        android:background="@color/app_dominantHue"
        android:gravity="center"
        android:padding="15dip"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_18" />

</LinearLayout>