<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/personal_bgcolor"
    android:orientation="vertical" >
<RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/bg_color" >

        <ImageButton
            android:id="@+id/ib_left"
            android:visibility="gone"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:textColor="@color/txt_teacher_name"
            android:textSize="@dimen/text_font_22" 
            android:ems="8"
            android:text="我的课程"
            android:singleLine="true"
            android:gravity="center"
            
            />
        
        <TextView
            android:id="@+id/tv_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="选择日期"
            android:textColor="@color/personal_textNameColor"
            android:textSize="@dimen/text_font_17"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ib_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:padding="12dip"
            android:src="@drawable/canlenders"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_right"
            style="@style/wwh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:visibility="gone" >
            <TextView
                android:id="@+id/tv_right_share_left"
                style="@style/ww"
                android:visibility="gone"
                android:layout_marginRight="10dip"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/tv_right_share"
                style="@style/ww"
                android:visibility="gone"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/tv_right_fav"
                style="@style/ww"
                android:visibility="gone"
                android:layout_marginLeft="10dip"
                android:background="@drawable/back" />
        </LinearLayout>
    </RelativeLayout>
     <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/psersonal_line" />
    <LinearLayout
        style="@style/fwv"
        android:background="@color/bg_color" >

        <LinearLayout
            style="@style/fwh"
            android:layout_height="50dp"
            android:background="#eeeaf1" >

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <View
                    android:id="@+id/v_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kc_shape" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="未开始"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/psersonal_line" />

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <View
                    android:id="@+id/v_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_notStart"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="进行中"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

			<View
			    android:layout_width="0.5dp"
			    android:layout_height="match_parent"
			    android:background="@color/psersonal_line" />

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <View
                    android:id="@+id/v_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_underway"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="已结束"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

			<View
			    android:layout_width="0.5dp"
			    android:layout_height="match_parent"
			    android:background="@color/psersonal_line" />

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <View
                    android:id="@+id/v_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="全部"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

           
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="@color/line_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>