<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ffv"
    android:background="@color/bg_color" >

    <LinearLayout
        style="@style/fwv"
        android:background="#bdbfcb"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <net.grobas.view.PolygonImageView
            android:id="@+id/iv_sixview_head"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_gravity="center"
            android:layout_marginLeft="5dip"
            android:background="@drawable/pullulate_head"
            app:poly_border="true"
            app:poly_border_width="5dp"
            app:poly_corner_radius="25"
            app:poly_rotation_angle="90"
            app:poly_vertices="6" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/ww"
            android:layout_marginTop="5dip"
            android:text="嘻嘻宝贝"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_13" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/ww"
            android:layout_marginTop="3dip"
            android:gravity="center"
            android:text="女 4岁 | 上海  杨浦区"
            android:textColor="@color/white"
            android:textSize="@dimen/text_font_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/my_pseson_bmf" >

        <RelativeLayout
            android:id="@+id/rl_a"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/wwv"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/tv_a_num"
                    style="@style/ww"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    style="@style/ww"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:text="已获取勋章"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/txthit_color" />

        <RelativeLayout
            android:id="@+id/rl_b"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/wwv"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/tv_b_num"
                    style="@style/ww"
                    android:gravity="center"
                    android:text="NO.03"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/ww"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:text="荣誉排行"
                    android:textColor="@color/txt_teacher_name"
                    android:textSize="@dimen/text_font_15" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/txthit_color" />

        <RelativeLayout
            android:id="@+id/rl_c"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ry"
                style="@style/ww"
                android:layout_centerInParent="true"
                android:background="@drawable/pullulate_label"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="2dip"
                android:text="荣誉榜"
                android:textColor="@color/white"
                android:textSize="@dimen/text_font_14" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/txthit_color" />

    <ScrollView
        style="@style/fw"
        android:layout_marginTop="10dip"
        android:scrollbars="none" >

        <FrameLayout
            android:id="@+id/fm_content"
            style="@style/fw" >
        </FrameLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_get"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="20dip"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="获取条件"
        android:textColor="@color/gray_deep"
        android:textSize="@dimen/text_font_15"
        android:visibility="gone" />

</LinearLayout>