<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/fw"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_location"
            style="@style/ww"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dip"
            android:drawableRight="@drawable/icon_down"
            android:paddingBottom="5dip"
            android:paddingLeft="8dip"
            android:paddingTop="5dip"
            android:text="上海"
            android:textColor="@color/txt_teacher_name"
            android:textSize="@dimen/text_font_15" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/search_box"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dip" >

            <ImageView
                style="@style/ww"
                android:src="@drawable/icon_gray_search" />

            <EditText
                android:id="@+id/tv_seach"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入课程关键字"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColor="@color/txt_teacher_name"
                android:textColorHint="@color/txt_color_a"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_font_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_rl"
            style="@style/ww"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:padding="10dip"
            android:src="@drawable/canlenders" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/psersonal_line" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/fw"
        android:background="@color/transparent"
        android:drawableBottom="@drawable/public_down"
        android:drawablePadding="2dip"
        android:gravity="center"
        android:padding="10dip"
        android:text="2015年12月21日"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_font_13"
        android:visibility="gone" />

    <LinearLayout
        style="@style/fwv"
        android:background="@color/bg_color" >

        <LinearLayout
            style="@style/fwh"
            android:background="@color/grabClass_title_bg" >

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="离我最近"
                    android:textColor="@color/app_dominantHue"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:id="@+id/v_1"
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_notStart"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="最新发布"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:id="@+id/v_2"
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_underway"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="价格最高"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:id="@+id/v_3"
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip"
                    android:text="名额最多"
                    android:textColor="@color/course_bg_textColor"
                    android:textSize="@dimen/text_font_16" />

                <View
                    android:id="@+id/v_4"
                    android:layout_width="60dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/kc_shape"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.01dip"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/my_line" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dip"
            android:background="@color/line_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1px" />
    </LinearLayout>

</LinearLayout>