<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#f6f6f8" >

        <ImageButton
            android:id="@+id/ib_left"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="center"
            android:textColor="@color/txt_teacher_name"
            android:textSize="@dimen/text_font_22" 
            android:ems="8"
            android:singleLine="true"
            android:gravity="center"
            
            />
        

        <TextView
            android:id="@+id/tv_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text=""
            android:textColor="@color/personal_textNameColor"
            android:textSize="@dimen/text_font_17"
             />

        <ImageButton
            android:id="@+id/ib_right"
            style="@style/ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@null"
            android:padding="12dip"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_right"
            style="@style/wwh"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:visibility="gone" >
            <TextView
                android:id="@+id/tv_right_share_left"
                style="@style/ww"
                android:visibility="gone"
                android:layout_marginRight="10dip"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/tv_right_share"
                style="@style/ww"
                android:visibility="gone"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/tv_right_fav"
                style="@style/ww"
                android:visibility="gone"
                android:layout_marginLeft="10dip"
                android:background="@drawable/back" />
        </LinearLayout>
    </RelativeLayout>
    
     <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/psersonal_line" />

    <LinearLayout
        android:id="@+id/ll_content"
        style="@style/ff"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>