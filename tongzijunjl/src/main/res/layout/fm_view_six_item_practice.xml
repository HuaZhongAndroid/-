<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <!-- yi -->

    <LinearLayout
        style="@style/fwh"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dip" >

            <net.grobas.view.PolygonImageView
                android:id="@+id/iv_a"
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:layout_gravity="center"
                app:poly_border="true"
                app:poly_border_width="5dp"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="90"
                app:poly_vertices="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dip" >

            <net.grobas.view.PolygonImageView
                android:id="@+id/iv_b"
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:layout_gravity="center"
                app:poly_border="true"
                app:poly_border_width="5dp"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="90"
                app:poly_vertices="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dip" >

            <net.grobas.view.PolygonImageView
                android:id="@+id/iv_c"
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:layout_gravity="center"
                app:poly_border="true"
                app:poly_border_width="5dp"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="90"
                app:poly_vertices="6" />
        </LinearLayout>
    </LinearLayout>

    <!-- er -->

    <LinearLayout
        style="@style/fwh"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="103dip" >

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <ImageView
                android:layout_width="60dip"
                android:layout_height="128dip"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/six_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <net.grobas.view.PolygonImageView
                android:id="@+id/iv_d"
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:layout_gravity="center"
                app:poly_border="true"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="90"
                app:poly_vertices="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <net.grobas.view.PolygonImageView
                android:id="@+id/iv_e"
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:layout_gravity="center"
                app:poly_border="true"
                app:poly_corner_radius="25"
                app:poly_rotation_angle="90"
                app:poly_vertices="6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" >

            <ImageView
                android:layout_width="60dip"
                android:layout_height="128dip"
                android:layout_marginLeft="5dip"
                android:background="@drawable/six_left" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>